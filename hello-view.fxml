<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="740.0" prefWidth="639.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" />
    <TextField fx:id="orderId" promptText="OrderId" />
    <TextField fx:id="cname" promptText="Customer Name" />
    <TextField fx:id="mob" promptText="Mobile Number" />
    <TextField fx:id="size" promptText="Size" />
    <TextField fx:id="toppings" promptText="Toppings" />
    <TextField fx:id="total" promptText="Total" />
    <Button mnemonicParsing="false" text="Insert" onAction="#InsertData" />
    <Button mnemonicParsing="false" text="Update" onAction="#UpdateData" />
    <Button mnemonicParsing="false" text="Delete" onAction="#DeleteData" />
    <Button mnemonicParsing="false" text="LoadData" onAction="#LoadData" />
    <Button onAction="#onHelloButtonClick" text="Fetch"/>
    <TableView fx:id="pizzaTable" prefHeight="200.0" prefWidth="327.0">
        <columns>
            <TableColumn fx:id="orderIdCol" prefWidth="75.0" text="Order ID" />
            <TableColumn fx:id="cnameCol" prefWidth="75.0" text="Customer Name" />
            <TableColumn fx:id="mobCol" prefWidth="75.0" text="Mobile Number" />
            <TableColumn fx:id="sizeCol" prefWidth="75.0" text="Size" />
            <TableColumn fx:id="toppingsCol" prefWidth="75.0" text="Toppings" />
            <TableColumn fx:id="totalCol" prefWidth="75.0" text="Total" />
        </columns>
    </TableView>
</VBox>
